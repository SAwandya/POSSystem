<Window x:Class="POSSystem.UI.Views.Products.ItemRegistryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Item Registry - Product Master List"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
        
        <!-- Gradients -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8B5DFF" Offset="0"/>
            <GradientStop Color="#FF3D8BFF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,0"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Effects -->
        <Grid Height="800" VerticalAlignment="Top">
            <Ellipse Width="600" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-300,-300,0,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#408B5DFF" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <!-- Main Layout -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="{StaticResource DarkCard}" CornerRadius="16" Height="80" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <Border Width="50" Height="50" CornerRadius="12" 
                                Background="{StaticResource PrimaryGradient}" 
                                Margin="0,0,15,0">
                            <TextBlock Text="??" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ITEM REGISTRY" 
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Complete product master list" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Stats -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15,10" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Total Products" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="TotalProductsText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Border>
                        <Border Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Active Products" FontSize="10" Foreground="{StaticResource SuccessGreen}"/>
                                <TextBlock x:Name="ActiveProductsText" Text="0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Header Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,25,0" VerticalAlignment="Center">
                        <Button Style="{StaticResource PrimaryButton}" Padding="12,0" Margin="0,0,10,0" Click="AddNewProductButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="?" Margin="0,0,8,0"/>
                                <TextBlock Text="Add New Item"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SecondaryButton}" Padding="12,0" Margin="0,0,10,0" Click="ExportButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="??" Margin="0,0,8,0"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Padding="12,0" Click="CloseButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="?" Margin="0,0,8,0"/>
                                <TextBlock Text="Close"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Search Bar -->
            <Border Grid.Row="1" Background="{StaticResource DarkCard}" CornerRadius="12" Padding="20" Margin="0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border Grid.Column="0" Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="??" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="SearchBox" 
                                   Text="Search by Product Name, Product ID, or Barcode..." 
                                   Background="Transparent" 
                                   BorderThickness="0" 
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="13"
                                   Width="500"
                                   VerticalAlignment="Center"
                                   GotFocus="SearchBox_GotFocus"
                                   LostFocus="SearchBox_LostFocus"
                                   TextChanged="SearchBox_TextChanged"/>
                        </StackPanel>
                    </Border>

                    <!-- Search Type Selector -->
                    <ComboBox x:Name="SearchTypeComboBox" 
                            Grid.Column="1"
                            Width="150"
                            Height="40"
                            Margin="15,0"
                            Background="{StaticResource DarkSurface}"
                            Foreground="{StaticResource TextPrimary}"
                            BorderBrush="{StaticResource DarkBorder}"
                            SelectedIndex="0">
                        <ComboBoxItem Content="All Fields"/>
                        <ComboBoxItem Content="Product Name"/>
                        <ComboBoxItem Content="Product ID"/>
                        <ComboBoxItem Content="Barcode"/>
                    </ComboBox>

                    <!-- Clear Button -->
                    <Button Grid.Column="2" Style="{StaticResource SecondaryButton}" Width="100" Click="ClearSearchButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="?" Margin="0,0,5,0"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Products DataGrid -->
            <Border Grid.Row="2" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
                <Grid>
                    <DataGrid x:Name="ProductsDataGrid" 
                            Style="{StaticResource DataGridStyle}"
                            SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product ID" Width="100" Binding="{Binding ProductId}"/>
                            <DataGridTextColumn Header="Product Name" Width="250" Binding="{Binding ProductName}"/>
                            <DataGridTextColumn Header="Barcode/SKU" Width="150" Binding="{Binding Barcode}"/>
                            <DataGridTextColumn Header="Category" Width="150" Binding="{Binding Category}"/>
                            <DataGridTextColumn Header="Price (Rs)" Width="120" Binding="{Binding SellingPrice, StringFormat=Rs {0:#,##0.00}}"/>
                            <DataGridTextColumn Header="Stock Qty" Width="100" Binding="{Binding Quantity}"/>
                            <DataGridTextColumn Header="Alert Qty" Width="100" Binding="{Binding AlertQty}"/>
                            <DataGridTextColumn Header="Status" Width="100" Binding="{Binding Status}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Loading Indicator -->
                    <Border x:Name="LoadingPanel" 
                          Background="#DD1A1A2E" 
                          CornerRadius="16"
                          Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="?" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Loading products..." 
                                     FontSize="16" 
                                     Foreground="{StaticResource TextPrimary}"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Background="{StaticResource DarkCard}" CornerRadius="12" Padding="15" Height="60" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessGreen}" Margin="0,0,8,0"/>
                        <TextBlock x:Name="StatusText" Text="Ready" FontSize="12" Foreground="{StaticResource TextPrimary}"/>
                        <Rectangle Width="1" Height="12" Fill="{StaticResource DarkBorder}" Margin="15,0"/>
                        <TextBlock x:Name="RecordCountText" Text="0 products displayed" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        <Rectangle Width="1" Height="12" Fill="{StaticResource DarkBorder}" Margin="15,0"/>
                        <TextBlock x:Name="LastUpdatedText" Text="Last Updated: --" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>

                    <!-- Footer Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource SecondaryButton}" Padding="10,0" Margin="0,0,10,0" Click="RefreshButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="??" Margin="0,0,6,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SecondaryButton}" Padding="10,0" Click="PrintButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="??" Margin="0,0,6,0"/>
                                <TextBlock Text="Print"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
