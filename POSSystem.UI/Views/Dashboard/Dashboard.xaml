<Window x:Class="POSSystem.UI.Views.Dashboard.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="POS Pro Dashboard"
        Height="750" 
        Width="1350"
        MinHeight="650"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal"
        ResizeMode="CanResize"
       >

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="PrimaryPurpleDark" Color="#FF6B3DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#FF00D4FF"/>
        <SolidColorBrush x:Key="AccentPink" Color="#FFFF5CAA"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>

        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>

        <!-- Light Text -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
        <SolidColorBrush x:Key="TextTertiary" Color="#FF8888AA"/>

        <!-- Gradients -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8B5DFF" Offset="0"/>
            <GradientStop Color="#FF3D8BFF" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00E096" Offset="0"/>
            <GradientStop Color="#FF00B8D4" Offset="1"/>
        </LinearGradientBrush>

        <!-- Top Navigation Button Style -->
        <Style x:Key="TopNavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="iconText" 
                                         Text="{TemplateBinding Tag}" 
                                         FontSize="14"
                                         Margin="0,0,6,0"/>
                                <TextBlock x:Name="mainText" 
                                         Text="{TemplateBinding Content}"/>
                                <TextBlock x:Name="hotkeyText" 
                                         Text="{TemplateBinding ToolTip}" 
                                         FontSize="10"
                                         Foreground="{StaticResource TextTertiary}"
                                         Margin="6,0,0,0"
                                         VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#20FFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#30FFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryPurple}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Card Button Style -->
        <Style x:Key="ModernCardButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="155"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="14">
                            <Grid>
                                <Border x:Name="hoverOverlay" 
                                        Background="Transparent" 
                                        CornerRadius="14"
                                        Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkSurface}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryPurple}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D4A"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Glass Effect Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#20FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#30FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="14"/>
        </Style>

        <!-- Modern Sidebar Button -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="10"
                                Padding="15,0">
                            <Grid>
                                <Rectangle x:Name="activeIndicator" 
                                           Fill="{StaticResource PrimaryPurple}" 
                                           Width="4" 
                                           HorizontalAlignment="Left"
                                           Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"
                                                Margin="12,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#20FFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#30FFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Chip -->
        <Style x:Key="ChipStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#20FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Grid>
        <!-- Background Effects -->
        <Grid Height="600" VerticalAlignment="Top">
            <Ellipse Width="500" Height="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-250,-250,0,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#408B5DFF" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="350" Height="350" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-150,-150">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#403D8BFF" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <!-- Main Layout -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Navigation -->
                <RowDefinition Height="70"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Main Content -->
                <RowDefinition Height="45"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->

            <!-- Top Header - CENTERED -->
            <Border Grid.Row="1" Style="{StaticResource GlassCard}" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Brand -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <Border Width="45" Height="45" CornerRadius="10" 
                                Background="{StaticResource PrimaryGradient}" 
                                Margin="0,0,12,0">
                            <TextBlock Text="⚡" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="POS PRO" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Advanced Retail System" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- CENTERED MASTER DASHBOARD -->
                    <Border Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⭐" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="MASTER DASHBOARD" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource PrimaryPurple}"/>
                        </StackPanel>
                    </Border>

                    <!-- User & Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                        <Button Style="{StaticResource SidebarButton}" Width="36" Height="36" Padding="0" ToolTip="Search (Ctrl+F)">
                            <Border Background="{StaticResource DarkCard}" CornerRadius="8" Width="36" Height="36">
                                <TextBlock Text="🔍" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Width="36" Height="36" Padding="0" Margin="8,0" ToolTip="Notifications">
                            <Border Background="{StaticResource DarkCard}" CornerRadius="8" Width="36" Height="36">
                                <Grid>
                                    <TextBlock Text="🔔" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border Width="6" Height="6" CornerRadius="3" 
                                            Background="{StaticResource TextSecondary}" 
                                            HorizontalAlignment="Right" VerticalAlignment="Top"
                                            Margin="1,-1,0,0"/>
                                </Grid>
                            </Border>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Width="36" Height="36" Padding="0" Margin="8,0" ToolTip="Profile">
                            <Border Background="{StaticResource PrimaryGradient}" CornerRadius="8" Width="36" Height="36">
                                <TextBlock Text="👤" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" 
                        Background="{StaticResource DarkCard}" 
                        CornerRadius="16" 
                        Margin="0,0,15,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0">
                            <!-- Sidebar Header -->
                            <Border Padding="20,15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Navigation" 
                                             FontSize="15" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,6"/>
                                    <TextBlock Text="Quick access to all modules" 
                                             FontSize="11" 
                                             Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </Border>

                            <!-- Menu Items -->
                            <StackPanel Margin="12,0,12,20">
                                <Button x:Name="DashboardMenuButton" Style="{StaticResource SidebarButton}" Margin="0,0,0,4" Click="DashboardMenuButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="30" Height="30" CornerRadius="7" 
                                                Background="#20FFFFFF" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="📊" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Dashboard" 
                                                 Foreground="{StaticResource TextPrimary}" 
                                                 FontSize="12"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="InventoryMenuButton" Style="{StaticResource SidebarButton}" Margin="0,0,0,4" Click="InventoryMenuButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="30" Height="30" CornerRadius="7" 
                                                Background="#20FFFFFF" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="📦" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Inventory" 
                                                 Foreground="{StaticResource TextPrimary}" 
                                                 FontSize="12"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="SalesMenuButton" Style="{StaticResource SidebarButton}" Margin="0,0,0,4" Click="SalesMenuButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="30" Height="30" CornerRadius="7" 
                                                Background="#20FFFFFF" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="🧾" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Sales" 
                                                 Foreground="{StaticResource TextPrimary}" 
                                                 FontSize="12"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="CustomersMenuButton" Style="{StaticResource SidebarButton}" Margin="0,0,0,4" Click="CustomersMenuButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="30" Height="30" CornerRadius="7" 
                                                Background="#20FFFFFF" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="👥" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Customers" 
                                                 Foreground="{StaticResource TextPrimary}" 
                                                 FontSize="12"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="AnalyticsMenuButton" Style="{StaticResource SidebarButton}" Margin="0,0,0,4" Click="AnalyticsMenuButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="30" Height="30" CornerRadius="7" 
                                                Background="#20FFFFFF" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="📈" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Analytics" 
                                                 Foreground="{StaticResource TextPrimary}" 
                                                 FontSize="12"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="SettingsMenuButton" Style="{StaticResource SidebarButton}" Margin="0,0,0,4" Click="SettingsMenuButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="30" Height="30" CornerRadius="7" 
                                                Background="#20FFFFFF" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="⚙️" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Settings" 
                                                 Foreground="{StaticResource TextPrimary}" 
                                                 FontSize="12"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Quick Stats -->
                            <Border Style="{StaticResource StatCard}" Margin="15,0,15,15">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Width="34" Height="34" CornerRadius="8" 
                                                Background="{StaticResource PrimaryGradient}">
                                            <TextBlock Text="📊" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Today's Stats" 
                                                 FontSize="13" 
                                                 FontWeight="Bold" 
                                                 Foreground="{StaticResource TextPrimary}"
                                                 Margin="10,0,0,0"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Revenue -->
                                    <Border Background="#10FFFFFF" CornerRadius="10" Padding="12" Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="Total Revenue" 
                                                     FontSize="10" 
                                                     Foreground="{StaticResource TextSecondary}"
                                                     Margin="0,0,0,4"/>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="Rs:18000" 
                                                         FontSize="18" 
                                                         FontWeight="Bold" 
                                                         Foreground="{StaticResource TextPrimary}"/>
                                                <Border Style="{StaticResource ChipStyle}" Padding="5,2" Margin="10,0,0,0">
                                                    <TextBlock Text="+12.5%" 
                                                             FontSize="9" 
                                                             FontWeight="Bold" 
                                                             Foreground="{StaticResource SuccessGreen}"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Orders -->
                                    <Border Background="#10FFFFFF" CornerRadius="10" Padding="12">
                                        <StackPanel>
                                            <TextBlock Text="New Orders" 
                                                     FontSize="10" 
                                                     Foreground="{StaticResource TextSecondary}"
                                                     Margin="0,0,0,4"/>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="24" 
                                                         FontSize="18" 
                                                         FontWeight="Bold" 
                                                         Foreground="{StaticResource TextPrimary}"/>
                                                <TextBlock Text="pending" 
                                                         FontSize="10" 
                                                         Foreground="{StaticResource TextSecondary}"
                                                         Margin="6,0,0,0"
                                                         VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Main Dashboard -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Welcome Section -->


                    <!-- Quick Actions Grid -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <Border Grid.Row="0" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Quick Actions" 
                                         FontSize="16" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         Margin="0,0,0,6"/>
                                <TextBlock Text="Access frequently used features" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </Border>

                        <!-- Cards Grid - 4x3 instead of 4x4 -->
                        <UniformGrid Grid.Row="1" Columns="4" Rows="3" Margin="0">

                            <!-- New Sale -->
                            <Button x:Name="NewSaleButton" Style="{StaticResource ModernCardButton}" Click="NewSaleButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="{StaticResource SuccessGradient}"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="💳" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="New Sale" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Start transaction" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Inventory -->
                            <Button x:Name="StockButton" Style="{StaticResource ModernCardButton}" Click="StockButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FFFFD166"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="📦" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Inventory" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Manage stock" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Customers -->
                            <Button x:Name="CustomersButton" Style="{StaticResource ModernCardButton}" Click="CustomersButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FF3D8BFF"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Customers" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Client database" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Reports -->
                            <Button x:Name="ReportsButton" Style="{StaticResource ModernCardButton}" Click="ReportsButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FFFF5CAA"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Reports" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Sales analytics" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- GRN -->
                            <Button x:Name="GRNButton" Style="{StaticResource ModernCardButton}" Click="GRNButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FF00E096"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="🧾" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="GRN" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Goods receipt" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Purchase Orders -->
                            <Button x:Name="PurchaseOrderButton" Style="{StaticResource ModernCardButton}" Click="PurchaseOrderButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FF8B5DFF"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="📋" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Purchase Orders" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Create PO" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Invoice History -->
                            <Button x:Name="InvoiceHistoryButton" Style="{StaticResource ModernCardButton}" Click="InvoiceHistoryButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FF3D8BFF"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="📄" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Invoices" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="View history" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Quick Sale -->
                            <Button x:Name="QuickSaleButton" Style="{StaticResource ModernCardButton}" Click="QuickSaleButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FFFFD166"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="⚡" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Quick Sale" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Fast checkout" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Stock Check -->
                            <Button x:Name="StockCheckButton" Style="{StaticResource ModernCardButton}" Click="StockCheckButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FF00D4FF"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="🔍" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Stock Check" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Search items" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Returns -->
                            <Button x:Name="ReturnsButton" Style="{StaticResource ModernCardButton}" Click="ReturnsButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FFFF5E7C"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="🔄" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Returns" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Process returns" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Cash Drawer -->
                            <Button x:Name="CashDrawerButton" Style="{StaticResource ModernCardButton}" Click="CashDrawerButton_Click">
                                <StackPanel>
                                    <Border Width="50" Height="50" CornerRadius="12" 
                                            Background="#FF00E096"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Cash Drawer" 
                                             FontSize="13" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Manage cash" 
                                             FontSize="10" 
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,3,0,0"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="3" 
                    Background="{StaticResource DarkCard}" 
                    CornerRadius="10" 
                    Margin="10,10,10,0"
                    Height="45">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="350"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Info - Wraps on small screens -->
                    <WrapPanel Grid.Column="0" 
                           VerticalAlignment="Center"
                           Margin="12,0">
                        <!-- System Status -->
                        <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0,0,12,0">
                            <Ellipse Width="6" Height="6" 
                             Fill="{StaticResource SuccessGreen}" 
                             Margin="0,0,4,0"
                             VerticalAlignment="Center"/>
                            <TextBlock Text="Online" 
                             FontSize="10" 
                             Foreground="{StaticResource TextPrimary}"
                             VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Separator -->
                        <Rectangle Width="1" Height="10" 
                           Fill="{StaticResource DarkBorder}" 
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"/>

                        <!-- Sync Time -->
                        <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,12,0">
                            <TextBlock Text="Sync:" 
                             FontSize="10" 
                             Foreground="{StaticResource TextSecondary}"
                             Margin="0,0,3,0"/>
                            <TextBlock Text="10:42 AM" 
                             FontSize="10" 
                             FontWeight="Medium"
                             Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Separator -->
                        <Rectangle Width="1" Height="10" 
                           Fill="{StaticResource DarkBorder}" 
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"/>

                        <!-- Devices -->
                        <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <TextBlock Text="Devices:" 
                             FontSize="10" 
                             Foreground="{StaticResource TextSecondary}"
                             Margin="0,0,3,0"/>
                            <TextBlock Text="3" 
                             FontSize="10" 
                             FontWeight="Medium"
                             Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Help & Support Buttons -->
                    <StackPanel Grid.Column="1" 
                        x:Name="FooterButtonsPanel"
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">

                        <!-- Help Button -->
                        <Button x:Name="HelpButton" 
                        Style="{StaticResource SidebarButton}" 
                        Padding="8,5"
                        MinWidth="60"
                        Margin="0,0,6,0" 
                        Click="HelpButton_Click"
                        ToolTip="Help (F1)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="❓" 
                                 FontSize="12" 
                                 Margin="0,0,4,0"/>
                                <TextBlock x:Name="HelpText" 
                                 Text="Help" 
                                 FontSize="10" 
                                 Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </Button>

                        <!-- Refresh Button -->
                        <Button x:Name="RefreshButton" 
                        Style="{StaticResource SidebarButton}" 
                        Padding="8,5"
                        MinWidth="70"
                        Click="RefreshButton_Click"
                        ToolTip="Refresh Dashboard (F5)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" 
                                 FontSize="12" 
                                 Margin="0,0,4,0"/>
                                <TextBlock x:Name="RefreshText" 
                                 Text="Refresh" 
                                 FontSize="10" 
                                 Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window> 