<Window x:Class="POSSystem.UI.Views.Sales.NewSalePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Sale - Create Invoice"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>

        <!-- Sale Page Styles -->
        <Style x:Key="SaleTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="SaleButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,0"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,0"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="50" Height="50" CornerRadius="12" Background="{StaticResource SuccessGreen}" Margin="0,0,15,0">
                        <TextBlock Text="??" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="NEW SALE / INVOICE" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Create new sales invoice" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="btnSaveHold" Content="?? Save &amp; Hold" Style="{StaticResource SecondaryButton}" Width="140" Margin="0,0,10,0" Click="SaveHoldButton_Click"/>
                    <Button x:Name="btnBack" Content="? Back" Style="{StaticResource SaleButton}" Width="100" Click="BackButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*" MinWidth="400" MaxWidth="500"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Product Selection & Items -->
            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Product Search & Add Section -->
                <Border Grid.Row="0" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <!-- Invoice Info Row -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Invoice Number" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtInvoiceNumber" Style="{StaticResource SaleTextBox}" IsReadOnly="True" Background="#30000000"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Date" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <DatePicker x:Name="dpSaleDate" Height="45" Background="Black" Foreground="White" BorderBrush="{StaticResource DarkBorder}">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="Black"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Time" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtTime" Style="{StaticResource SaleTextBox}" IsReadOnly="True" Background="#30000000"/>
                            </StackPanel>
                        </Grid>

                        <!-- Product Search Row -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Search Product (Barcode/Name/ID)" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <Grid>
                                    <TextBox x:Name="txtProductSearch" 
                                           Style="{StaticResource SaleTextBox}"
                                           TextChanged="ProductSearch_TextChanged"
                                           KeyDown="ProductSearch_KeyDown"
                                           GotFocus="ProductSearch_GotFocus"
                                           LostFocus="ProductSearch_LostFocus"
                                           Text=""/>
                                    
                                    <!-- Product Suggestions Popup -->
                                    <Popup x:Name="ProductSuggestionsPopup"
                                         PlacementTarget="{Binding ElementName=txtProductSearch}"
                                         Placement="Bottom"
                                         IsOpen="False"
                                         AllowsTransparency="True"
                                         PopupAnimation="Slide"
                                         StaysOpen="False">
                                        <Border Background="{StaticResource DarkSurface}"
                                              BorderBrush="{StaticResource DarkBorder}"
                                              BorderThickness="1"
                                              CornerRadius="8"
                                              MaxHeight="300"
                                              MinWidth="{Binding ElementName=txtProductSearch, Path=ActualWidth}">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                <ItemsControl x:Name="ProductSuggestionsList">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="Transparent"
                                                                  BorderThickness="0"
                                                                  Padding="12,8"
                                                                  Cursor="Hand"
                                                                  MouseLeftButtonDown="SuggestionItem_Click">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" 
                                                                             Text="{Binding ProductId}" 
                                                                             FontSize="11"
                                                                             FontWeight="Bold"
                                                                             Foreground="{StaticResource TextSecondary}"
                                                                             Margin="0,0,10,0"
                                                                             VerticalAlignment="Center"/>
                                                                    <StackPanel Grid.Column="1">
                                                                        <TextBlock Text="{Binding Name}" 
                                                                                 FontSize="13"
                                                                                 FontWeight="SemiBold"
                                                                                 Foreground="{StaticResource TextPrimary}"/>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="Barcode: " FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                                                            <TextBlock Text="{Binding Barcode}" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                                                            <TextBlock Text=" | Price: Rs " FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                                                            <TextBlock Text="{Binding SellingPrice, StringFormat='{}{0:#,##0.00}'}" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                    <TextBlock Grid.Column="2" 
                                                                             Text="{Binding AvailableQty, StringFormat='Stock: {0}'}" 
                                                                             FontSize="11"
                                                                             Foreground="{StaticResource SuccessGreen}"
                                                                             VerticalAlignment="Center"
                                                                             Margin="10,0,0,0"/>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Quantity" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtQuantity" Text="1" Style="{StaticResource SaleTextBox}"/>
                            </StackPanel>

                            <Button Grid.Column="2" Content="? Add Item" Style="{StaticResource SaleButton}" VerticalAlignment="Bottom" Width="130" Click="AddItemButton_Click"/>
                        </Grid>

                        <!-- Customer Information Row - MOVED HERE -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Customer Name (Optional)" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtCustomerName" Text="Walk-in Customer" Style="{StaticResource SaleTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Customer Phone" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtCustomerPhone" Style="{StaticResource SaleTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Items Grid -->
                <Border Grid.Row="1" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Sale Items" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,15"/>

                        <DataGrid x:Name="dgSaleItems" Grid.Row="1" Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Width="50" Binding="{Binding SNo}"/>
                                <DataGridTextColumn Header="Product Name" Width="*" Binding="{Binding ProductName}"/>
                                <DataGridTextColumn Header="Unit Price" Width="120" Binding="{Binding UnitPrice, StringFormat='Rs {0:#,##0.00}'}"/>
                                <DataGridTextColumn Header="Qty" Width="80" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Total" Width="120" Binding="{Binding TotalPrice, StringFormat='Rs {0:#,##0.00}'}"/>
                                <DataGridTemplateColumn Header="Action" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="?? Remove" 
                                                  Background="{StaticResource ErrorRed}" 
                                                  Foreground="White"
                                                  BorderThickness="0"
                                                  Padding="8,4"
                                                  Cursor="Hand"
                                                  Tag="{Binding ProductId}"
                                                  Click="RemoveItem_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="?? Clear All" Style="{StaticResource SecondaryButton}" Width="130" Height="45" Click="ClearAllButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Panel - Calculations & Payment -->
            <Border Grid.Column="1" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
                <StackPanel>
                    <!-- Bill Summary -->
                    <Border Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Bill Summary" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,15"/>
                            
                            <!-- Item Count -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Total Items:" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="txtItemCount" Text="0" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Subtotal -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Subtotal:" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="txtSubTotal" Text="Rs 0.00" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Discount and Tax in Two Columns -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Discount Column -->
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Discount (%)" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtDiscountPercent" Text="0" Style="{StaticResource SaleTextBox}" Height="40" TextChanged="Discount_TextChanged"/>
                                </StackPanel>

                                <!-- Tax Column -->
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Tax (%)" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtTaxPercent" Text="0" Style="{StaticResource SaleTextBox}" Height="40" TextChanged="Tax_TextChanged"/>
                                </StackPanel>
                            </Grid>

                            <!-- Discount Amount and Tax Amount -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Discount:" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock x:Name="txtDiscountAmount" Text="Rs 0.00" FontSize="11" Foreground="{StaticResource ErrorRed}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Tax:" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock x:Name="txtTaxAmount" Text="Rs 0.00" FontSize="11" Foreground="{StaticResource WarningYellow}"/>
                                </StackPanel>
                            </Grid>

                            <Rectangle Height="1" Fill="{StaticResource DarkBorder}" Margin="0,5,0,15"/>

                            <!-- Grand Total -->
                            <Grid>
                                <TextBlock Text="GRAND TOTAL:" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock x:Name="txtGrandTotal" Text="Rs 0.00" FontSize="18" FontWeight="Bold" Foreground="{StaticResource SuccessGreen}" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Payment Section -->
                    <Border Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Payment Method" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <RadioButton x:Name="rbCash" Content="?? Cash" Grid.Row="0" Grid.Column="0" Foreground="{StaticResource TextPrimary}" IsChecked="True" Margin="0,0,0,10" GroupName="PaymentMethod"/>
                                <RadioButton x:Name="rbCard" Content="?? Card" Grid.Row="0" Grid.Column="1" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10" GroupName="PaymentMethod"/>
                                <RadioButton x:Name="rbTransfer" Content="?? Transfer" Grid.Row="1" Grid.Column="0" Foreground="{StaticResource TextPrimary}" GroupName="PaymentMethod"/>
                                <RadioButton x:Name="rbCredit" Content="?? Credit" Grid.Row="1" Grid.Column="1" Foreground="{StaticResource TextPrimary}" GroupName="PaymentMethod"/>
                            </Grid>

                            <TextBlock Text="Amount Paid" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,15,0,5"/>
                            <TextBox x:Name="txtAmountPaid" Text="0.00" Style="{StaticResource SaleTextBox}" TextChanged="AmountPaid_TextChanged"/>

                            <Grid Margin="0,10,0,0">
                                <TextBlock Text="Change:" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="txtChange" Text="Rs 0.00" FontSize="14" FontWeight="Bold" Foreground="{StaticResource SuccessGreen}" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Button Content="?? Complete Sale" Style="{StaticResource SaleButton}" Height="60" FontSize="16" Click="CompleteSaleButton_Click" Margin="0,0,0,10"/>
                    <Button Content="?? Print Preview" Style="{StaticResource SecondaryButton}" Click="PrintPreviewButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
