<Window x:Class="POSSystem.UI.Views.Sales.InvoicesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Invoice History - View All Invoices"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>

        <!-- Button Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="InvoiceDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="50"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="Padding" Value="15,0"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="13"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="25" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="60" Height="60" CornerRadius="15" Background="{StaticResource SecondaryBlue}" Margin="0,0,20,0">
                        <TextBlock Text="??" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="INVOICE HISTORY" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock x:Name="txtRecordCount" Text="View and manage all sales invoices" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnRefresh" Content="?? Refresh" Style="{StaticResource SecondaryButton}" Width="120" Margin="0,0,10,0" Click="RefreshButton_Click"/>
                    <Button x:Name="btnExport" Content="?? Export" Style="{StaticResource SecondaryButton}" Width="120" Margin="0,0,10,0" Click="ExportButton_Click"/>
                    <Button x:Name="btnBack" Content="? Back" Style="{StaticResource ModernButton}" Width="110" Click="BackButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Search Invoices" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSearch" 
                             Height="45" 
                             Padding="15,0"
                             VerticalContentAlignment="Center"
                             Background="{StaticResource DarkSurface}" 
                             Foreground="{StaticResource TextPrimary}"
                             BorderBrush="{StaticResource DarkBorder}"
                             FontSize="14"
                             TextChanged="SearchBox_TextChanged"/>
                </StackPanel>

                <!-- Start Date -->
                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="From Date" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpStartDate" 
                                Height="45" 
                                Background="{StaticResource DarkSurface}" 
                                Foreground="{StaticResource TextPrimary}"
                                BorderBrush="{StaticResource DarkBorder}"
                                SelectedDateChanged="DateFilter_Changed">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>

                <!-- End Date -->
                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                    <TextBlock Text="To Date" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpEndDate" 
                                Height="45" 
                                Background="{StaticResource DarkSurface}" 
                                Foreground="{StaticResource TextPrimary}"
                                BorderBrush="{StaticResource DarkBorder}"
                                SelectedDateChanged="DateFilter_Changed">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>

                <!-- Filter Button -->
                <Button Grid.Column="3" 
                        Content="?? Filter" 
                        Style="{StaticResource ModernButton}" 
                        Width="130" 
                        VerticalAlignment="Bottom"
                        Click="FilterButton_Click"/>
            </Grid>
        </Border>

        <!-- Invoices DataGrid -->
        <Border Grid.Row="2" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Loading Panel -->
                <Border x:Name="LoadingPanel" 
                        Grid.Row="0" 
                        Grid.RowSpan="2"
                        Background="#AA000000" 
                        CornerRadius="16" 
                        Visibility="Collapsed"
                        Panel.ZIndex="999">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="?" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Loading invoices..." 
                                   FontSize="18" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <DataGrid x:Name="dgInvoices" 
                          Grid.Row="1"
                          Style="{StaticResource InvoiceDataGrid}"
                          SelectionMode="Single"
                          MouseDoubleClick="Invoice_DoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Invoice #" Width="140" Binding="{Binding InvoiceNumber}"/>
                        <DataGridTextColumn Header="Date" Width="180" Binding="{Binding SaleDate, StringFormat='{}{0:dd MMM yyyy hh:mm tt}'}"/>
                        <DataGridTextColumn Header="Customer" Width="*" Binding="{Binding CustomerName}"/>
                        <DataGridTextColumn Header="Items" Width="80" Binding="{Binding Items.Count}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Subtotal" Width="120" Binding="{Binding SubTotal, StringFormat='Rs {0:#,##0.00}'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Tax" Width="100" Binding="{Binding TaxAmount, StringFormat='Rs {0:#,##0.00}'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="{StaticResource WarningYellow}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Discount" Width="100" Binding="{Binding DiscountAmount, StringFormat='Rs {0:#,##0.00}'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="{StaticResource ErrorRed}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Grand Total" Width="140" Binding="{Binding GrandTotal, StringFormat='Rs {0:#,##0.00}'}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="{StaticResource SuccessGreen}"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status" Width="100" Binding="{Binding PaymentStatus}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource SuccessGreen}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Actions" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="??? View" 
                                                Background="{StaticResource SecondaryBlue}" 
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Margin="0,0,5,0"
                                                Cursor="Hand"
                                                FontSize="11"
                                                Tag="{Binding SaleId}"
                                                Click="ViewInvoice_Click"/>
                                        <Button Content="???" 
                                                Background="{StaticResource SuccessGreen}" 
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="8,5"
                                                Cursor="Hand"
                                                FontSize="11"
                                                Tag="{Binding SaleId}"
                                                Click="PrintInvoice_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Summary Footer -->
        <Border Grid.Row="3" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtSummary" 
                           Text="Total Invoices: 0 | Total Sales: Rs 0.00" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondary}" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           x:Name="txtFilteredCount" 
                           Text="Showing: 0 invoices" 
                           FontSize="13" 
                           Foreground="{StaticResource TextSecondary}" 
                           VerticalAlignment="Center"
                           Margin="0,0,30,0"/>

                <Button Grid.Column="2" 
                        Content="?? View Reports" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="150" 
                        Margin="0,0,10,0"
                        Click="ViewReports_Click"/>

                <Button Grid.Column="3" 
                        Content="? New Sale" 
                        Style="{StaticResource ModernButton}" 
                        Width="130"
                        Click="NewSale_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
