<Window x:Class="POSSystem.UI.Views.inventory.Inventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Inventory Dashboard"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="PrimaryPurpleDark" Color="#FF6B3DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#FF00D4FF"/>
        <SolidColorBrush x:Key="AccentPink" Color="#FFFF5CAA"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>

        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>

        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
        <SolidColorBrush x:Key="TextTertiary" Color="#FF8888AA"/>

        <!-- Gradients -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8B5DFF" Offset="0"/>
            <GradientStop Color="#FF3D8BFF" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00E096" Offset="0"/>
            <GradientStop Color="#FF00B8D4" Offset="1"/>
        </LinearGradientBrush>

        <!-- Styles -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,0"/>

        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,0"/>

        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Effects -->
        <Grid Height="800" VerticalAlignment="Top">
            <Ellipse Width="600" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-300,-300,0,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#408B5DFF" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="400" Height="400" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-200,-200">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#403D8BFF" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <!-- Main Layout -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="{StaticResource DarkCard}" CornerRadius="16" Height="91" VerticalAlignment="Top" Margin="0,-11,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <Border Width="50" Height="50" CornerRadius="12" 
                                Background="{StaticResource PrimaryGradient}" 
                                Margin="0,0,15,0">
                            <TextBlock Text="📊" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="INVENTORY DASHBOARD" 
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Real-time stock management and analytics" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Quick Stats -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Style="{StaticResource StatCard}" Margin="0,0,15,0" Width="180">
                            <StackPanel>
                                <TextBlock Text="Total Items" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="1,248" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource StatCard}" Margin="0,0,15,0" Width="180">
                            <StackPanel>
                                <TextBlock Text="Low Stock" 
                                         FontSize="11" 
                                         Foreground="{StaticResource WarningYellow}"/>
                                <TextBlock Text="47" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource StatCard}" Width="180">
                            <StackPanel>
                                <TextBlock Text="Out of Stock" 
                                         FontSize="11" 
                                         Foreground="{StaticResource ErrorRed}"/>
                                <TextBlock Text="12" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Header Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,25,0" VerticalAlignment="Center">
                        <Button Style="{StaticResource SecondaryButton}" Padding="15,0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" Margin="0,0,8,0"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➕" Margin="0,0,8,0"/>
                                <TextBlock Text="Add New Item"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Inventory List -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,8,15,-8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search & Filter -->
                        <Border Grid.Row="0" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Search Box -->
                                <Border Grid.Column="0" Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Wheat" />
                                        <TextBox Text="Search items..." 
                                               Background="Transparent" 
                                               BorderThickness="0" 
                                               Foreground="{StaticResource TextPrimary}"
                                               Width="300"/>
                                    </StackPanel>
                                </Border>

                                <!-- Filter Button -->
                                <Button Grid.Column="1" Style="{StaticResource SecondaryButton}" Margin="15,0" Padding="15,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚙️" Margin="0,0,8,0"/>
                                        <TextBlock Text="Filter"/>
                                    </StackPanel>
                                </Button>

                                <!-- Refresh Button -->
                                <Button Grid.Column="2" Style="{StaticResource SecondaryButton}" Padding="15,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔄" Margin="0,0,8,0"/>
                                        <TextBlock Text="Refresh"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Inventory DataGrid -->
                        <DataGrid Grid.Row="1" Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item ID" Width="80" Binding="{Binding ItemID}"/>
                                <DataGridTextColumn Header="Product Name" Width="200" Binding="{Binding ProductName}"/>
                                <DataGridTextColumn Header="Category" Width="120" Binding="{Binding Category}"/>
                                <DataGridTextColumn Header="SKU" Width="120" Binding="{Binding SKU}"/>
                                <DataGridTextColumn Header="Current Stock" Width="100" Binding="{Binding CurrentStock}"/>
                                <DataGridTextColumn Header="Min Stock" Width="90" Binding="{Binding MinStock}"/>
                                <DataGridTextColumn Header="Price" Width="100" Binding="{Binding Price, StringFormat=C}"/>
                                <DataGridTextColumn Header="Status" Width="120">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Border Style="{StaticResource StatusBadge}" 
                                                                Background="{Binding StatusColor}">
                                                            <TextBlock Text="{Binding Status}" 
                                                                       Foreground="White"
                                                                       FontWeight="SemiBold"
                                                                       FontSize="11"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Right Panel - Quick Actions & Stats -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,7,0,-7">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Quick Actions -->
                            <TextBlock Text="Quick Actions" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,0,0,20"/>

                            <!-- Action Buttons -->
                            <Button Style="{StaticResource PrimaryButton}" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="📥" Margin="0,0,10,0"/>
                                    <TextBlock Text="Stock In"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource SecondaryButton}" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="📤" Margin="0,0,10,0"/>
                                    <TextBlock Text="Stock Out"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource SecondaryButton}" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="🔄" Margin="0,0,10,0"/>
                                    <TextBlock Text="Transfer Stock"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource SecondaryButton}" Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="📄" Margin="0,0,10,0"/>
                                    <TextBlock Text="Stock Report"/>
                                </StackPanel>
                            </Button>

                            <!-- Category Distribution -->
                            <TextBlock Text="Category Distribution" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,0,0,15"/>

                            <StackPanel Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Border Width="12" Height="12" CornerRadius="2" Background="{StaticResource PrimaryPurple}" 
                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Electronics" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                    <TextBlock Text="42%" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" 
                                             Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Border Width="12" Height="12" CornerRadius="2" Background="{StaticResource SecondaryBlue}" 
                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Clothing" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                    <TextBlock Text="28%" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" 
                                             Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Border Width="12" Height="12" CornerRadius="2" Background="{StaticResource SuccessGreen}" 
                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Food and Beverage" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                    <TextBlock Text="18%" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" 
                                             Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="12" Height="12" CornerRadius="2" Background="{StaticResource AccentPink}" 
                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Others" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                    <TextBlock Text="12%" Foreground="{StaticResource TextPrimary}" FontWeight="SemiBold" 
                                             Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Low Stock Alerts -->
                            <TextBlock Text="⚠️ Low Stock Alerts" 
                                     FontSize="14" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource WarningYellow}"
                                     Margin="0,0,0,15"/>

                            <Border Background="#20FFD166" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="iPhone 14 Pro Max" 
                                             FontWeight="SemiBold" 
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Only 3 left in stock" 
                                             FontSize="11" 
                                             Foreground="{StaticResource WarningYellow}"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#20FFD166" CornerRadius="10" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="USB-C Cable" 
                                             FontWeight="SemiBold" 
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Only 5 left in stock" 
                                             FontSize="11" 
                                             Foreground="{StaticResource WarningYellow}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource DarkCard}" CornerRadius="12" Padding="15" Height="84" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Inventory Stats -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessGreen}" 
                                   Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Total Value: $124,850" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>

                        <Rectangle Width="1" Height="12" Fill="{StaticResource DarkBorder}" 
                               Margin="0,0,20,0" VerticalAlignment="Center"/>

                        <TextBlock Text="Last Updated: Today, 10:30 AM" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>

                    <!-- Footer Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource SecondaryButton}" Padding="10,0" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" Margin="0,0,6,0"/>
                                <TextBlock Text="Analytics"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource PrimaryButton}" Padding="10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🛒" Margin="0,0,6,0"/>
                                <TextBlock Text="Sync with POS"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>