<Window x:Class="POSSystem.UI.Views.Users.AddEditUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit User"
        Width="500" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#FF0F0F1A"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
    </Window.Resources>
    
    <Border Background="{StaticResource DarkCard}" CornerRadius="16" Margin="20" Padding="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock x:Name="txtTitle" Text="Add New User" FontSize="22" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>
                
                <TextBlock Text="Username" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Height="40" Padding="10" FontSize="14" 
                         Background="{StaticResource DarkSurface}" Foreground="{StaticResource TextPrimary}" 
                         BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" Margin="0,0,0,15"/>
                
                <TextBlock Text="Full Name" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFullName" Height="40" Padding="10" FontSize="14"
                         Background="{StaticResource DarkSurface}" Foreground="{StaticResource TextPrimary}"
                         BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" Margin="0,0,0,15"/>
                
                <TextBlock Text="Password" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="40" Padding="10" FontSize="14"
                             Background="{StaticResource DarkSurface}" Foreground="{StaticResource TextPrimary}"
                             BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" Margin="0,0,0,15"/>
                
                <TextBlock Text="Role" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbRole" Height="40" FontSize="14"
                          Background="{StaticResource DarkSurface}" Foreground="{StaticResource TextPrimary}"
                          BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" Margin="0,0,0,25"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="?? Save User" Width="130" Height="45" Margin="0,0,10,0"
                            Background="{StaticResource SuccessGreen}" Foreground="White"
                            BorderThickness="0" FontSize="14" FontWeight="Bold" Cursor="Hand"
                            Click="SaveButton_Click"/>
                    <Button Content="Cancel" Width="100" Height="45"
                            Background="Transparent" Foreground="{StaticResource TextSecondary}"
                            BorderBrush="{StaticResource DarkBorder}" BorderThickness="1"
                            FontSize="14" Cursor="Hand" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
