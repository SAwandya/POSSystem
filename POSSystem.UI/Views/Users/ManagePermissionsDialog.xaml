<Window x:Class="POSSystem.UI.Views.Users.ManagePermissionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage User Permissions"
        Width="700" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#FF0F0F1A"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
    </Window.Resources>
    
    <Border Background="{StaticResource DarkCard}" CornerRadius="16" Margin="20" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="txtTitle" Text="Manage Permissions" FontSize="22" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtUsername" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>
            
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="PermissionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource DarkSurface}" CornerRadius="8" 
                                    Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" 
                                            Background="{StaticResource PrimaryPurple}" Margin="0,0,15,0">
                                        <TextBlock Text="??" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="11" 
                                                   Foreground="{StaticResource TextSecondary}" Margin="0,3,0,0"/>
                                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="6,2" 
                                                HorizontalAlignment="Left" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding ModuleGroup}" FontSize="10" 
                                                       Foreground="{StaticResource TextSecondary}"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <CheckBox Grid.Column="2" IsChecked="{Binding IsGranted, Mode=TwoWay}" 
                                              VerticalAlignment="Center" Width="50" Height="25"
                                              Style="{StaticResource {x:Type CheckBox}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="?? Save Permissions" Width="160" Height="45"
                        Background="{StaticResource SuccessGreen}" Foreground="White"
                        BorderThickness="0" FontSize="14" FontWeight="Bold" Cursor="Hand"
                        Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Height="45" Margin="10,0,0,0"
                        Background="Transparent" Foreground="{StaticResource TextSecondary}"
                        BorderBrush="{StaticResource DarkBorder}" BorderThickness="1"
                        FontSize="14" Cursor="Hand" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
