<Window x:Class="POSSystem.UI.Views.Suppliers.SupplierProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supplier Profile"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A1A2E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#FFFF8C42"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
    </Window.Resources>

    <Border Background="#FF1A1A2E" CornerRadius="20" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Edit/Delete OR Save/Cancel Buttons -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="?? Supplier Profile" 
                             FontSize="22" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock x:Name="txtModeIndicator"
                             Text="View and manage supplier details" 
                             FontSize="12" 
                             Foreground="{StaticResource TextSecondary}"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Edit & Delete Buttons (View Mode) -->
                <StackPanel x:Name="ViewModeButtons" Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnEdit"
                          Content="?? Edit" 
                          Width="80"
                          Height="35"
                          Background="{StaticResource PrimaryPurple}"
                          Foreground="White"
                          BorderThickness="0"
                          Cursor="Hand"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Margin="0,0,10,0"
                          Click="EditButton_Click"/>
                    <Button x:Name="btnDelete"
                          Content="?? Delete" 
                          Width="80"
                          Height="35"
                          Background="{StaticResource ErrorRed}"
                          Foreground="White"
                          BorderThickness="0"
                          Cursor="Hand"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Click="DeleteButton_Click"/>
                </StackPanel>

                <!-- Save & Cancel Buttons (Edit Mode) -->
                <StackPanel x:Name="EditModeButtons" Grid.Column="1" Orientation="Horizontal" Visibility="Collapsed">
                    <Button x:Name="btnSave"
                          Content="?? Save" 
                          Width="80"
                          Height="35"
                          Background="{StaticResource SuccessGreen}"
                          Foreground="White"
                          BorderThickness="0"
                          Cursor="Hand"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Margin="0,0,10,0"
                          Click="SaveButton_Click"/>
                    <Button x:Name="btnCancel"
                          Content="? Cancel" 
                          Width="80"
                          Height="35"
                          Background="{StaticResource ErrorRed}"
                          Foreground="White"
                          BorderThickness="0"
                          Cursor="Hand"
                          FontSize="12"
                          FontWeight="SemiBold"
                          Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Supplier ID Badge -->
            <Border Grid.Row="1" 
                  Background="{StaticResource DarkSurface}" 
                  CornerRadius="10" 
                  Padding="15" 
                  Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Supplier ID" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="txtSupplierId" 
                             Text="SUP-001" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource WarningOrange}"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Supplier Details -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Supplier Name -->
                    <Border Background="{StaticResource DarkSurface}" 
                          CornerRadius="10" 
                          Padding="15" 
                          Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="?? Supplier Name" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            <!-- View Mode -->
                            <TextBlock x:Name="txtSupplierNameView" 
                                     Text="ABC Electronics Ltd." 
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,5,0,0"/>
                            <!-- Edit Mode -->
                            <TextBox x:Name="txtSupplierNameEdit"
                                   Visibility="Collapsed"
                                   Height="35"
                                   Background="#30FFFFFF"
                                   Foreground="{StaticResource TextPrimary}"
                                   BorderBrush="{StaticResource DarkBorder}"
                                   BorderThickness="1"
                                   Padding="8"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Contact Person -->
                    <Border Background="{StaticResource DarkSurface}" 
                          CornerRadius="10" 
                          Padding="15" 
                          Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="?? Contact Person" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            <!-- View Mode -->
                            <TextBlock x:Name="txtContactPersonView" 
                                     Text="John Doe" 
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,5,0,0"/>
                            <!-- Edit Mode -->
                            <TextBox x:Name="txtContactPersonEdit"
                                   Visibility="Collapsed"
                                   Height="35"
                                   Background="#30FFFFFF"
                                   Foreground="{StaticResource TextPrimary}"
                                   BorderBrush="{StaticResource DarkBorder}"
                                   BorderThickness="1"
                                   Padding="8"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Phone Number -->
                    <Border Background="{StaticResource DarkSurface}" 
                          CornerRadius="10" 
                          Padding="15" 
                          Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="?? Phone Number" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            <!-- View Mode -->
                            <TextBlock x:Name="txtPhoneView" 
                                     Text="+1 234 567 8900" 
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,5,0,0"/>
                            <!-- Edit Mode -->
                            <TextBox x:Name="txtPhoneEdit"
                                   Visibility="Collapsed"
                                   Height="35"
                                   Background="#30FFFFFF"
                                   Foreground="{StaticResource TextPrimary}"
                                   BorderBrush="{StaticResource DarkBorder}"
                                   BorderThickness="1"
                                   Padding="8"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Email -->
                    <Border Background="{StaticResource DarkSurface}" 
                          CornerRadius="10" 
                          Padding="15" 
                          Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="?? Email Address" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            <!-- View Mode -->
                            <TextBlock x:Name="txtEmailView" 
                                     Text="john@abcelectronics.com" 
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,5,0,0"/>
                            <!-- Edit Mode -->
                            <TextBox x:Name="txtEmailEdit"
                                   Visibility="Collapsed"
                                   Height="35"
                                   Background="#30FFFFFF"
                                   Foreground="{StaticResource TextPrimary}"
                                   BorderBrush="{StaticResource DarkBorder}"
                                   BorderThickness="1"
                                   Padding="8"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Address -->
                    <Border Background="{StaticResource DarkSurface}" 
                          CornerRadius="10" 
                          Padding="15" 
                          Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="?? Address" FontSize="11" Foreground="{StaticResource TextSecondary}"/>
                            <!-- View Mode -->
                            <TextBlock x:Name="txtAddressView" 
                                     Text="123 Business Street, City, Country" 
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,5,0,0"
                                     TextWrapping="Wrap"/>
                            <!-- Edit Mode -->
                            <TextBox x:Name="txtAddressEdit"
                                   Visibility="Collapsed"
                                   Height="70"
                                   Background="#30FFFFFF"
                                   Foreground="{StaticResource TextPrimary}"
                                   BorderBrush="{StaticResource DarkBorder}"
                                   BorderThickness="1"
                                   Padding="8"
                                   FontSize="14"
                                   Margin="0,5,0,0"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                    <!-- Stats Cards -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total GRNs -->
                        <Border Grid.Column="0" 
                              Background="{StaticResource DarkSurface}" 
                              CornerRadius="10" 
                              Padding="15">
                            <StackPanel>
                                <TextBlock Text="?? Total GRNs" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="txtTotalGRNs" 
                                         Text="0" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource SuccessGreen}"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Amount -->
                        <Border Grid.Column="2" 
                              Background="{StaticResource DarkSurface}" 
                              CornerRadius="10" 
                              Padding="15">
                            <StackPanel>
                                <TextBlock Text="?? Total Amount" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="txtTotalAmount" 
                                         Text="Rs 0.00" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource WarningOrange}"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Close Button -->
            <Button Grid.Row="3" 
                  Content="Close" 
                  Width="120"
                  Height="45"
                  Background="Transparent"
                  Foreground="White"
                  BorderBrush="{StaticResource DarkBorder}"
                  BorderThickness="1"
                  Cursor="Hand"
                  FontSize="14"
                  Margin="0,20,0,0"
                  HorizontalAlignment="Center"
                  Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>
