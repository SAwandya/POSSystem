<Window x:Class="POSSystem.UI.Views.Suppliers.SuppliersPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Suppliers Management"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#FFFF8C42"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,0"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <!-- Selected Effect -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- Selected + Hover Effect -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#A08B5DFF"/>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="50" Height="50" CornerRadius="12" Background="{StaticResource WarningOrange}" Margin="0,0,15,0">
                        <TextBlock Text="??" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SUPPLIERS MANAGEMENT" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Manage your vendor database" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="2" Content="? Back" Style="{StaticResource PrimaryButton}" Width="100" Click="BackButton_Click"/>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Border Grid.Row="1" Background="{StaticResource DarkCard}" CornerRadius="12" Padding="20" Margin="0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="??" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="SearchBox" 
                               Text="Search suppliers by name, contact person, or phone..." 
                               Background="Transparent" 
                               BorderThickness="0" 
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="13"
                               Width="500"
                               VerticalAlignment="Center"
                               GotFocus="SearchBox_GotFocus"
                               LostFocus="SearchBox_LostFocus"
                               TextChanged="SearchBox_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Add New Supplier Button -->
                <Button Grid.Column="1" Content="? Add New Supplier" Style="{StaticResource PrimaryButton}" Width="180" Margin="15,0,0,0" Click="AddNewSupplierButton_Click"/>
            </Grid>
        </Border>

        <!-- Suppliers DataGrid -->
        <Border Grid.Row="2" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Suppliers List" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock x:Name="SupplierCountText" Text="0 suppliers" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                </StackPanel>

                <DataGrid x:Name="SuppliersDataGrid" 
                        Grid.Row="1" 
                        Style="{StaticResource DataGridStyle}"
                        SelectionMode="Single"
                        IsReadOnly="True"
                        MouseDoubleClick="SuppliersDataGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Supplier ID" Width="120" Binding="{Binding SupplierId}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Name" Width="250" Binding="{Binding Name}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Contact Person" Width="200" Binding="{Binding ContactPerson}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Contact Number" Width="150" Binding="{Binding Phone}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Email" Width="200" Binding="{Binding Email}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Address" Width="*" Binding="{Binding Address}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="{StaticResource DarkCard}" CornerRadius="12" Padding="15" Height="60" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessGreen}" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Ready" FontSize="12" Foreground="{StaticResource TextPrimary}"/>
                    <Rectangle Width="1" Height="12" Fill="{StaticResource DarkBorder}" Margin="15,0"/>
                    <TextBlock x:Name="RecordCountText" Text="0 suppliers displayed" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    <Rectangle Width="1" Height="12" Fill="{StaticResource DarkBorder}" Margin="15,0"/>
                    <TextBlock x:Name="LastUpdatedText" Text="Last Updated: --" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <!-- Footer Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButton}" Padding="10,0" Margin="0,0,10,0" Click="RefreshButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="??" Margin="0,0,6,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource SecondaryButton}" Padding="10,0" Click="ExportButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="??" Margin="0,0,6,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Border x:Name="LoadingPanel" 
              Grid.Row="2"
              Background="#DD1A1A2E" 
              CornerRadius="16"
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="?" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Loading suppliers..." 
                         FontSize="16" 
                         Foreground="{StaticResource TextPrimary}"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
