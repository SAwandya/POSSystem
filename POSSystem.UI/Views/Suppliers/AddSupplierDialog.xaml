<Window x:Class="POSSystem.UI.Views.Suppliers.AddSupplierDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Supplier"
        Width="550"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A1A2E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
    </Window.Resources>

    <Border Background="#FF1A1A2E" CornerRadius="20" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="? Add New Supplier" 
                         FontSize="22" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Enter supplier information" 
                         FontSize="12" 
                         Foreground="{StaticResource TextSecondary}"
                         Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Form Fields -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Supplier Name -->
                    <StackPanel Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Supplier Name" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Text=" *" FontSize="12" Foreground="{StaticResource ErrorRed}"/>
                        </StackPanel>
                        <TextBox x:Name="txtSupplierName" 
                               Height="40"
                               Background="{StaticResource DarkSurface}"
                               Foreground="{StaticResource TextPrimary}"
                               BorderBrush="{StaticResource DarkBorder}"
                               BorderThickness="1"
                               Padding="12"
                               FontSize="13"/>
                    </StackPanel>

                    <!-- Contact Person -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Contact Person" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtContactPerson" 
                               Height="40"
                               Background="{StaticResource DarkSurface}"
                               Foreground="{StaticResource TextPrimary}"
                               BorderBrush="{StaticResource DarkBorder}"
                               BorderThickness="1"
                               Padding="12"
                               FontSize="13"/>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Phone Number" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPhone" 
                               Height="40"
                               Background="{StaticResource DarkSurface}"
                               Foreground="{StaticResource TextPrimary}"
                               BorderBrush="{StaticResource DarkBorder}"
                               BorderThickness="1"
                               Padding="12"
                               FontSize="13"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Email Address" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEmail" 
                               Height="40"
                               Background="{StaticResource DarkSurface}"
                               Foreground="{StaticResource TextPrimary}"
                               BorderBrush="{StaticResource DarkBorder}"
                               BorderThickness="1"
                               Padding="12"
                               FontSize="13"/>
                    </StackPanel>

                    <!-- Address -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Address" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtAddress" 
                               Height="80"
                               Background="{StaticResource DarkSurface}"
                               Foreground="{StaticResource TextPrimary}"
                               BorderBrush="{StaticResource DarkBorder}"
                               BorderThickness="1"
                               Padding="12"
                               FontSize="13"
                               TextWrapping="Wrap"
                               AcceptsReturn="True"
                               VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="?? Save Supplier" 
                      Width="140"
                      Height="45"
                      Background="{StaticResource PrimaryPurple}"
                      Foreground="White"
                      BorderThickness="0"
                      Cursor="Hand"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Margin="0,0,10,0"
                      Click="SaveButton_Click"/>
                <Button Content="Cancel" 
                      Width="100"
                      Height="45"
                      Background="Transparent"
                      Foreground="White"
                      BorderBrush="{StaticResource DarkBorder}"
                      BorderThickness="1"
                      Cursor="Hand"
                      FontSize="14"
                      Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
