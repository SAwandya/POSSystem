<Window x:Class="POSSystem.UI.Views.Stock.StockPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Management"
        Height="1215"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>

        <!-- Button Styles - REMOVED DUPLICATE BASEDON -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
        </Style>

        <!-- Separate style for SecondaryButton -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkSurface}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkSurface}"/>
        </Style>

        <!-- Chip Style -->
        <Style x:Key="ChipStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkCard}" 
                CornerRadius="12" 
                Padding="20" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="50" Height="50" CornerRadius="12" 
                            Background="{StaticResource PrimaryPurple}" 
                            Margin="0,0,15,0">
                        <TextBlock Text="📦" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Stock Management" 
                                 FontSize="24" 
                                 FontWeight="Bold" 
                                 Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Manage inventory, track stock levels, and generate reports" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Quick Stats -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <Border CornerRadius="12" Margin="0,0,10,0" Padding="15,10"
                            Background="{StaticResource DarkCard}">
                        <StackPanel>
                            <TextBlock Text="Total Items" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="TotalItemsText" 
                                     Text="0" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="12" Margin="0,0,10,0" Padding="15,10"
                            Background="{StaticResource DarkCard}">
                        <StackPanel>
                            <TextBlock Text="Low Stock" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="LowStockText" 
                                     Text="0" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource WarningYellow}"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="12" Margin="0,0,10,0" Padding="15,10"
                            Background="{StaticResource DarkCard}">
                        <StackPanel>
                            <TextBlock Text="Out of Stock" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="OutOfStockText" 
                                     Text="0" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource ErrorRed}"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="12" Padding="15,10"
                            Background="{StaticResource DarkCard}">
                        <StackPanel>
                            <TextBlock Text="Total Value" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock x:Name="TotalValueText" 
                                     Text="$0.00" 
                                     FontSize="20" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource SuccessGreen}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Button x:Name="RefreshButton" 
                          Content="🔄 Refresh"
                          Width="100"
                          Height="40"
                          Background="{StaticResource DarkSurface}"
                          Foreground="{StaticResource TextPrimary}"
                          BorderThickness="0"
                          Margin="0,0,10,0"/>
                    <Button x:Name="BackButton" 
                          Content="← Dashboard"
                          Width="100"
                          Height="40"
                          Background="{StaticResource DarkSurface}"
                          Foreground="{StaticResource TextPrimary}"
                          BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Quick Actions & Filters -->
            <Border Grid.Column="0" 
                    Background="{StaticResource DarkCard}" 
                    CornerRadius="12" 
                    Margin="0,0,10,0"
                    Padding="20">
                <StackPanel>
                    <!-- Quick Actions -->
                    <TextBlock Text="Quick Actions" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,0,0,15"/>

                    <StackPanel>
                        <Button x:Name="AddStockButton" 
                              Content="+ Add New Item"
                              Height="40"
                              Background="{StaticResource PrimaryPurple}"
                              Foreground="White"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="StockInButton" 
                              Content="📥 Stock In"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="StockOutButton" 
                              Content="📤 Stock Out"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="TransferButton" 
                              Content="🔄 Transfer"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="AdjustButton" 
                              Content="📊 Adjust Stock"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="BarcodeButton" 
                              Content="📷 Print Barcode"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="ReorderButton" 
                              Content="🔄 Generate PO"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Filters -->
                    <TextBlock Text="Filters" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,30,0,15"/>

                    <StackPanel>
                        <TextBlock Text="Search Items" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextSecondary}"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchBox" 
                               Background="#20FFFFFF"
                               Foreground="{StaticResource TextPrimary}"
                               Height="35"
                               Padding="10"
                               Margin="0,0,0,15"/>

                        <TextBlock Text="Category" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextSecondary}"
                                 Margin="0,0,0,5"/>
                        <ComboBox x:Name="CategoryFilter" 
                                Background="#20FFFFFF"
                                Foreground="{StaticResource TextPrimary}"
                                Height="35"
                                Padding="10"
                                Margin="0,0,0,15">
                            <ComboBoxItem Content="All Categories" IsSelected="True"/>
                            <ComboBoxItem Content="Electronics"/>
                            <ComboBoxItem Content="Clothing"/>
                            <ComboBoxItem Content="Groceries"/>
                            <ComboBoxItem Content="Furniture"/>
                            <ComboBoxItem Content="Office Supplies"/>
                        </ComboBox>

                        <TextBlock Text="Stock Status" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextSecondary}"
                                 Margin="0,0,0,5"/>
                        <StackPanel>
                            <CheckBox x:Name="InStockFilter" 
                                    Content="In Stock" 
                                    Foreground="{StaticResource TextPrimary}"
                                    IsChecked="True"/>
                            <CheckBox x:Name="LowStockFilter" 
                                    Content="Low Stock" 
                                    Foreground="{StaticResource TextPrimary}"/>
                            <CheckBox x:Name="OutOfStockFilter" 
                                    Content="Out of Stock" 
                                    Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Reports -->
                    <TextBlock Text="Reports" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,30,0,15"/>

                    <StackPanel>
                        <Button x:Name="StockReportButton" 
                              Content="📊 Stock Report"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="MovementButton" 
                              Content="📈 Movement"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="ExpiryButton" 
                              Content="📅 Expiry Report"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"
                              Margin="0,0,0,10"/>
                        <Button x:Name="PrintButton" 
                              Content="🖨️ Print List"
                              Height="40"
                              Background="{StaticResource DarkSurface}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Right Panel - Stock List -->
            <Border Grid.Column="1" 
                    Background="{StaticResource DarkCard}" 
                    CornerRadius="12" 
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Grid Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource DarkSurface}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Stock Items" 
                                     FontSize="18" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="EditButton" 
                                      Content="Edit"
                                      Width="80"
                                      Height="40"
                                      Background="{StaticResource PrimaryPurple}"
                                      Foreground="White"
                                      BorderThickness="0"
                                      Margin="0,0,10,0"/>
                                <Button x:Name="DeleteButton" 
                                      Content="Delete"
                                      Width="80"
                                      Height="40"
                                      Background="{StaticResource ErrorRed}"
                                      Foreground="White"
                                      BorderThickness="0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid x:Name="StockGrid" 
                            Grid.Row="1" 
                            Background="{StaticResource DarkCard}"
                            Foreground="{StaticResource TextPrimary}"
                            BorderBrush="{StaticResource DarkSurface}"
                            BorderThickness="1"
                            RowBackground="{StaticResource DarkCard}"
                            AlternatingRowBackground="{StaticResource DarkSurface}"
                            HeadersVisibility="Column"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserResizeRows="False"
                            SelectionMode="Single"
                            SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                              Width="60" 
                                              Binding="{Binding Id}"
                                              Foreground="{StaticResource TextSecondary}"/>
                            <DataGridTextColumn Header="Item Name" 
                                              Width="200" 
                                              Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="SKU" 
                                              Width="120" 
                                              Binding="{Binding SKU}"/>
                            <DataGridTextColumn Header="Category" 
                                              Width="120" 
                                              Binding="{Binding Category}"/>
                            <DataGridTextColumn Header="Quantity" 
                                              Width="80" 
                                              Binding="{Binding Quantity}"/>
                            <DataGridTextColumn Header="Min Qty" 
                                              Width="80" 
                                              Binding="{Binding MinimumQuantity}"/>
                            <DataGridTextColumn Header="Unit" 
                                              Width="80" 
                                              Binding="{Binding Unit}"/>
                            <DataGridTextColumn Header="Cost" 
                                              Width="100" 
                                              Binding="{Binding CostPrice, StringFormat=C}"/>
                            <DataGridTextColumn Header="Price" 
                                              Width="100" 
                                              Binding="{Binding SellingPrice, StringFormat=C}"/>
                            <DataGridTextColumn Header="Value" 
                                              Width="100" 
                                              Binding="{Binding TotalValue, StringFormat=C}"/>
                            <DataGridTemplateColumn Header="Status" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="In Stock">
                                                            <Setter Property="Background" Value="#2000E096"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                            <Setter Property="Background" Value="#20FFD166"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                            <Setter Property="Background" Value="#20FF5E7C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" 
                                                     FontSize="11" 
                                                     FontWeight="Bold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="➕" 
                                                  Width="30" 
                                                  Height="30"
                                                  Background="Transparent"
                                                  Foreground="{StaticResource SuccessGreen}"
                                                  BorderThickness="0"
                                                  ToolTip="Add Stock"
                                                  Tag="{Binding Id}"/>
                                            <Button Content="➖" 
                                                  Width="30" 
                                                  Height="30"
                                                  Background="Transparent"
                                                  Foreground="{StaticResource ErrorRed}"
                                                  BorderThickness="0"
                                                  Margin="5,0,0,0"
                                                  ToolTip="Remove Stock"
                                                  Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource DarkSurface}" 
                CornerRadius="10" 
                Margin="0,10,0,0"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Last Updated: " 
                             FontSize="12" 
                             Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="LastUpdatedText" 
                             Text="Loading..." 
                             FontSize="12" 
                             Foreground="{StaticResource TextPrimary}"
                             FontWeight="Bold"
                             Margin="5,0,0,0"/>
                    <TextBlock Text="•" 
                             FontSize="12" 
                             Foreground="{StaticResource TextSecondary}"
                             Margin="15,0"/>
                    <TextBlock Text="Selected: " 
                             FontSize="12" 
                             Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="SelectedItemText" 
                             Text="No item selected" 
                             FontSize="12" 
                             Foreground="{StaticResource TextPrimary}"
                             FontWeight="Bold"
                             Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ImportButton" 
                          Content="📥 Import CSV"
                          Width="120"
                          Height="40"
                          Background="{StaticResource DarkSurface}"
                          Foreground="{StaticResource TextPrimary}"
                          BorderThickness="0"/>
                    <Button x:Name="ExportButton" 
                          Content="📤 Export CSV"
                          Width="120"
                          Height="40"
                          Background="{StaticResource DarkSurface}"
                          Foreground="{StaticResource TextPrimary}"
                          BorderThickness="0"
                          Margin="10,0,0,0"/>
                    <Button x:Name="StockTakeButton" 
                          Content="📋 Stock Take"
                          Width="120"
                          Height="40"
                          Background="{StaticResource PrimaryPurple}"
                          Foreground="White"
                          BorderThickness="0"
                          Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>