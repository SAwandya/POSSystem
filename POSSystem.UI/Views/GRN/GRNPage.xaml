<Window x:Class="POSSystem.UI.Views.GRN.GRNPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Goods Received Note (GRN)"
        Height="1140"
        Width="1600"
        MinHeight="700"
        MinWidth="1200"
         WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Use same colors as Dashboard -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="PrimaryPurpleDark" Color="#FF6B3DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#FF00D4FF"/>
        <SolidColorBrush x:Key="AccentPink" Color="#FFFF5CAA"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>

        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>

        <!-- Light Text -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>
        <SolidColorBrush x:Key="TextTertiary" Color="#FF8888AA"/>

        <!-- Gradients -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8B5DFF" Offset="0"/>
            <GradientStop Color="#FF3D8BFF" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00E096" Offset="0"/>
            <GradientStop Color="#FF00B8D4" Offset="1"/>
        </LinearGradientBrush>

        <!-- Reuse styles from Dashboard -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#20FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#30FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="16"/>
        </Style>

        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="12"
                                Padding="20,0">
                            <Grid>
                                <Rectangle x:Name="activeIndicator" 
                                           Fill="{StaticResource PrimaryPurple}" 
                                           Width="4" 
                                           HorizontalAlignment="Left"
                                           Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"
                                                Margin="15,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#20FFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#30FFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChipStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#20FFFFFF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
        </Style>

        <!-- GRN Specific Styles -->
        <Style x:Key="GRNTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="GRNComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="GRNButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GRNDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Effects (same as dashboard) -->
        <Grid Height="800" VerticalAlignment="Top">
            <Ellipse Width="600" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-300,-300,0,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#408B5DFF" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="400" Height="400" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-200,-200">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#403D8BFF" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <!-- Main Layout -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource GlassCard}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <Border Width="50" Height="50" CornerRadius="12" 
                                Background="{StaticResource SuccessGradient}" 
                                Margin="0,0,15,0">
                            <TextBlock Text="📦" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="GOODS RECEIVED NOTE" 
                                     FontSize="22" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Record incoming stock deliveries" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- GRN Status Badge -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Style="{StaticResource StatusBadge}" Background="#2000E096">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessGreen}" 
                                       Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="DRAFT MODE" 
                                         FontSize="13" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource SuccessGreen}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,25,0" VerticalAlignment="Center">
                        <Button Style="{StaticResource SidebarButton}" Width="40" Height="40" Padding="0" 
                                ToolTip="Print" Click="PrintButton_Click">
                            <Border Background="{StaticResource DarkCard}" CornerRadius="10" Width="40" Height="40">
                                <TextBlock Text="🖨️" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Width="40" Height="40" Padding="0" Margin="10,0" 
                                ToolTip="Save Draft" Click="SaveDraftButton_Click">
                            <Border Background="{StaticResource DarkCard}" CornerRadius="10" Width="40" Height="40">
                                <TextBlock Text="💾" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Width="40" Height="40" Padding="0" Margin="10,0" 
                                ToolTip="Back to Dashboard" Click="BackButton_Click">
                            <Border Background="{StaticResource PrimaryGradient}" CornerRadius="10" Width="40" Height="40">
                                <TextBlock Text="←" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - GRN Details -->
                <Border Grid.Column="0" 
                        Background="{StaticResource DarkCard}" 
                        CornerRadius="20" 
                        Margin="0,0,20,0"
                        Padding="25">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- GRN Information -->
                            <TextBlock Text="GRN Information" 
                                     FontSize="16" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     Margin="0,0,0,20"/>

                            <!-- GRN Number -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="GRN Number" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,0,5"/>
                                <TextBox x:Name="txtGRNNumber" 
                                       Text="GRN-2024-00123" 
                                       Style="{StaticResource GRNTextBox}"
                                       IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Supplier -->
                            <StackPanel Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Supplier" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Text=" *" 
                                             FontSize="12" 
                                             Foreground="{StaticResource ErrorRed}"/>
                                </StackPanel>
                                <ComboBox x:Name="cmbSupplier" 
                                        Style="{StaticResource GRNComboBox}">
                                    <ComboBoxItem Content="-- Select Supplier --" IsSelected="True"/>
                                    <ComboBoxItem Content="ABC Electronics Ltd."/>
                                    <ComboBoxItem Content="XYZ Suppliers Inc."/>
                                    <ComboBoxItem Content="Global Imports Corp."/>
                                    <ComboBoxItem Content="Local Distributors Co."/>
                                </ComboBox>
                            </StackPanel>

                            <!-- PO & Invoice -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Purchase Order No." 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtPONumber" 
                                           Style="{StaticResource GRNTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Invoice Number" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0,0,0,5"/>
                                    <TextBox x:Name="txtInvoiceNumber" 
                                           Style="{StaticResource GRNTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Dates -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="GRN Date" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0,0,0,5"/>
                                    <DatePicker x:Name="dpGRNDate"
                                              Height="40"
                                              Padding="8"
                                              BorderBrush="{StaticResource DarkBorder}"
                                              Background="{StaticResource DarkSurface}"
                                              Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Delivery Date" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0,0,0,5"/>
                                    <DatePicker x:Name="dpDeliveryDate"
                                              Height="40"
                                              Padding="8"
                                              BorderBrush="{StaticResource DarkBorder}"
                                              Background="{StaticResource DarkSurface}"
                                              Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Received By -->
                            <StackPanel Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Received By" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Text=" *" 
                                             FontSize="12" 
                                             Foreground="{StaticResource ErrorRed}"/>
                                </StackPanel>
                                <TextBox x:Name="txtReceivedBy" 
                                       Style="{StaticResource GRNTextBox}"/>
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="Notes" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,0,5"/>
                                <TextBox x:Name="txtNotes" 
                                       Style="{StaticResource GRNTextBox}"
                                       Height="80"
                                       TextWrapping="Wrap"
                                       AcceptsReturn="True"
                                       VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <!-- Add Item Section -->
                            <Border Style="{StaticResource StatCard}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Add New Item" 
                                             FontSize="14" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,15"/>

                                    <!-- Item Selection -->
                                    <StackPanel Margin="0,0,0,15">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Item" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock Text=" *" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource ErrorRed}"/>
                                        </StackPanel>
                                        <ComboBox x:Name="cmbItem" 
                                                Style="{StaticResource GRNComboBox}">
                                            <ComboBoxItem Content="-- Select Item --" IsSelected="True"/>
                                            <ComboBoxItem Content="Laptop Dell XPS 15"/>
                                            <ComboBoxItem Content="Wireless Mouse Logitech"/>
                                            <ComboBoxItem Content="USB-C Cable 2m"/>
                                            <ComboBoxItem Content="Office Chair Ergonomic"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Quantity & Price -->
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Quantity" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"
                                                     Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtQuantity" 
                                                   Text="1" 
                                                   Style="{StaticResource GRNTextBox}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Unit Price" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"
                                                     Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtUnitPrice" 
                                                   Text="0.00" 
                                                   Style="{StaticResource GRNTextBox}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Batch & Location -->
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Batch No." 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"
                                                     Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtBatchNo" 
                                                   Style="{StaticResource GRNTextBox}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Location" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"
                                                     Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtLocation" 
                                                   Text="Warehouse A" 
                                                   Style="{StaticResource GRNTextBox}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Expiry Date -->
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="Expiry Date" 
                                                 FontSize="12" 
                                                 Foreground="{StaticResource TextSecondary}"
                                                 Margin="0,0,0,5"/>
                                        <DatePicker x:Name="dpExpiryDate"
                                                  Height="40"
                                                  Padding="8"
                                                  BorderBrush="{StaticResource DarkBorder}"
                                                  Background="{StaticResource DarkSurface}"
                                                  Foreground="{StaticResource TextPrimary}"/>
                                    </StackPanel>

                                    <!-- Add Button -->
                                    <Button x:Name="btnAddItem" 
                                          Content="+ Add to GRN" 
                                          Style="{StaticResource GRNButtonPrimary}"
                                          Height="50"
                                          FontSize="14"
                                          Click="btnAddItem_Click"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Right Panel - Items List -->
                <Border Grid.Column="1" 
                        Background="{StaticResource DarkCard}" 
                        CornerRadius="20"
                        Padding="25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Actions -->
                        <Border Grid.Row="0" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Received Items" 
                                             FontSize="18" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock x:Name="txtItemCount" 
                                             Text="0 items" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="btnEditItem" 
                                          Style="{StaticResource SidebarButton}" 
                                          Padding="15,10"
                                          Margin="0,0,10,0"
                                          Click="EditItemButton_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✏️" 
                                                     FontSize="14" 
                                                     Margin="0,0,8,0"/>
                                            <TextBlock Text="Edit" 
                                                     FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="btnRemoveItem" 
                                          Style="{StaticResource SidebarButton}" 
                                          Padding="15,10"
                                          Background="#30FF5E7C"
                                          Click="RemoveItemButton_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🗑️" 
                                                     FontSize="14" 
                                                     Margin="0,0,8,0"/>
                                            <TextBlock Text="Remove" 
                                                     FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid x:Name="dgGRNItems" 
                                Grid.Row="1" 
                                Style="{StaticResource GRNDataGrid}"
                                Margin="0,0,0,20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Width="50" Binding="{Binding SNo}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Item Name" Width="200" Binding="{Binding ItemName}"/>
                                <DataGridTextColumn Header="SKU" Width="120" Binding="{Binding SKU}"/>
                                <DataGridTextColumn Header="Qty" Width="70" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Unit" Width="70" Binding="{Binding Unit}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Unit Price" Width="110" Binding="{Binding UnitPrice, StringFormat=C}"/>
                                <DataGridTextColumn Header="Total" Width="110" Binding="{Binding Total, StringFormat=C}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Batch No." Width="120" Binding="{Binding BatchNo}"/>
                                <DataGridTextColumn Header="Expiry" Width="100" Binding="{Binding ExpiryDate, StringFormat=d}"/>
                                <DataGridTextColumn Header="Location" Width="120" Binding="{Binding Location}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Summary -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource DarkSurface}" 
                                CornerRadius="16" 
                                Padding="25">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Totals -->
                                <StackPanel Grid.Column="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,30,0">
                                            <TextBlock Text="Subtotal" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock x:Name="txtSubtotal" 
                                                     Text="0.00" 
                                                     FontSize="20" 
                                                     FontWeight="Bold"
                                                     Foreground="{StaticResource TextPrimary}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Margin="0,0,30,0">
                                            <TextBlock Text="Tax (10%)" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock x:Name="txtTax" 
                                                     Text="0.00" 
                                                     FontSize="20" 
                                                     FontWeight="Bold"
                                                     Foreground="{StaticResource TextPrimary}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="Grand Total" 
                                                     FontSize="12" 
                                                     Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock x:Name="txtGrandTotal" 
                                                     Text="0.00" 
                                                     FontSize="24" 
                                                     FontWeight="Bold"
                                                     Foreground="{StaticResource SuccessGreen}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="btnClearAll" 
                                          Style="{StaticResource SidebarButton}" 
                                          Padding="20,12"
                                          Margin="0,0,15,0"
                                          Background="#20FFFFFF"
                                          Click="ClearAllButton_Click">
                                        <TextBlock Text="Clear All" 
                                                 FontSize="13" 
                                                 FontWeight="SemiBold"/>
                                    </Button>

                                    <Button x:Name="btnCompleteGRN" 
                                          Style="{StaticResource GRNButtonPrimary}"
                                          Padding="25,12"
                                          Background="{StaticResource SuccessGradient}"
                                          Click="CompleteGRNButton_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✅" 
                                                     FontSize="16" 
                                                     Margin="0,0,10,0"/>
                                            <TextBlock Text="Complete GRN" 
                                                     FontSize="14" 
                                                     FontWeight="Bold"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{StaticResource DarkCard}" 
                    CornerRadius="12" 
                    Margin="10,20,10,0"
                    Height="55">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Info -->
                    <WrapPanel Grid.Column="0" VerticalAlignment="Center" Margin="15,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessGreen}" 
                                   Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="GRN: Draft" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextPrimary}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <Rectangle Width="1" Height="12" Fill="{StaticResource DarkBorder}" 
                               Margin="0,0,15,0" VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                            <TextBlock Text="Last Saved:" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,4,0"/>
                            <TextBlock Text="10:30 AM" 
                                     FontSize="11" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>

                        <Rectangle Width="1" Height="12" Fill="{StaticResource DarkBorder}" 
                               Margin="0,0,15,0" VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Items:" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,4,0"/>
                            <TextBlock x:Name="txtFooterItemCount" 
                                     Text="0" 
                                     FontSize="11" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Footer Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                        <Button x:Name="btnEmailGRN" 
                              Style="{StaticResource SidebarButton}" 
                              Padding="10,6"
                              MinWidth="70"
                              Margin="0,0,8,0" 
                              Click="EmailGRNButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✉️" FontSize="13" Margin="0,0,6,0"/>
                                <TextBlock Text="Email" FontSize="11"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnUpdateStock" 
                              Style="{StaticResource SidebarButton}" 
                              Padding="10,6"
                              MinWidth="90"
                              Margin="0,0,8,0" 
                              Click="UpdateStockButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="13" Margin="0,0,6,0"/>
                                <TextBlock Text="Update Stock" FontSize="11"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnRefresh" 
                              Style="{StaticResource SidebarButton}" 
                              Padding="10,6"
                              MinWidth="80"
                              Click="RefreshButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄" FontSize="13" Margin="0,0,6,0"/>
                                <TextBlock Text="Refresh" FontSize="11"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>