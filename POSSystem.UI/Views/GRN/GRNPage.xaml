<Window x:Class="POSSystem.UI.Views.GRN.GRNPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Goods Received Note (GRN)"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F1A"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryPurple" Color="#FF8B5DFF"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#FF3D8BFF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#FF00E096"/>
        <SolidColorBrush x:Key="WarningYellow" Color="#FFFFD166"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FFFF5E7C"/>
        
        <!-- Dark Theme -->
        <SolidColorBrush x:Key="DarkBackground" Color="#FF0F0F1A"/>
        <SolidColorBrush x:Key="DarkCard" Color="#FF1A1A2E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#FF252540"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#FF3A3A5E"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0D0"/>

        <!-- GRN Specific Styles -->
        <Style x:Key="GRNTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="GRNSearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="GRNComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                        Grid.Column="2"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press"
                                        Background="{StaticResource DarkSurface}"
                                        BorderBrush="{StaticResource DarkBorder}"
                                        BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Name="ContentSite"
                                                    IsHitTestVisible="False"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                    Margin="8,0,0,0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"/>
                                    <Path Name="Arrow"
                                        Grid.Column="1"
                                        Fill="{StaticResource TextSecondary}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Grid>
                            </ToggleButton>
                            <Popup Name="Popup"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                          Background="{StaticResource DarkSurface}"
                                          BorderThickness="1"
                                          BorderBrush="{StaticResource DarkBorder}"
                                          CornerRadius="5"
                                          Margin="0,2,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{StaticResource DarkSurface}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Name="Border"
                                          Background="{TemplateBinding Background}"
                                          BorderThickness="0"
                                          Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryPurple}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#408B5DFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GRNButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource DarkCard}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource DarkSurface}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="50" Height="50" CornerRadius="12" Background="{StaticResource SuccessGreen}" Margin="0,0,15,0">
                        <TextBlock Text="📦" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="GOODS RECEIVED NOTE" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Record incoming stock" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="2" Content="← Back" Style="{StaticResource GRNButton}" Width="100" Click="BackButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Input Section -->
            <Border Grid.Row="0" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="25" Margin="0,0,0,15">
                <StackPanel>
                    <!-- First Row -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- GRN Number -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="GRN Number" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtGRNNumber" Style="{StaticResource GRNTextBox}" IsReadOnly="True" Background="#30000000"/>
                        </StackPanel>

                        <!-- PO Number -->
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="PO Number" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPONumber" Style="{StaticResource GRNTextBox}"/>
                        </StackPanel>

                        <!-- Invoice Number -->
                        <StackPanel Grid.Column="2" Margin="0,0,10,0">
                            <TextBlock Text="Invoice Number" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtInvoiceNumber" Style="{StaticResource GRNTextBox}"/>
                        </StackPanel>

                        <!-- Invoice Value -->
                        <StackPanel Grid.Column="3" Margin="0,0,10,0">
                            <TextBlock Text="Invoice Value" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtInvoiceValue" Style="{StaticResource GRNTextBox}"/>
                        </StackPanel>

                        <!-- GRN Date -->
                        <StackPanel Grid.Column="4" Margin="0,0,10,0">
                            <TextBlock Text="GRN Date" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <DatePicker x:Name="dpGRNDate" Height="40" Background="{StaticResource DarkSurface}" Foreground="{StaticResource TextPrimary}" BorderBrush="{StaticResource DarkBorder}"/>
                        </StackPanel>

                        <!-- Supplier -->
                        <StackPanel Grid.Column="5" Margin="0,0,10,0">
                            <TextBlock Text="Supplier" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtSupplierId" Grid.Column="0" Style="{StaticResource GRNTextBox}" Width="60" Margin="0,0,5,0"/>
                                <ComboBox x:Name="cmbSupplier" Grid.Column="1" Style="{StaticResource GRNComboBox}" Margin="0,0,5,0"/>
                                <Button Grid.Column="2" Content="Select" Style="{StaticResource SecondaryButton}" Width="70" Height="40" Margin="0,0,5,0" FontSize="11" Click="SelectSupplierButton_Click"/>
                                <Button Grid.Column="3" Content="+ Add" Style="{StaticResource GRNButton}" Width="70" Height="40" FontSize="11" Click="AddSupplierButton_Click"/>
                            </Grid>
                        </StackPanel>

                        <!-- Outstanding -->
                        <StackPanel Grid.Column="6">
                            <TextBlock Text="Outstanding" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtOutstanding" Style="{StaticResource GRNTextBox}" IsReadOnly="True" Background="#30000000"/>
                        </StackPanel>
                    </Grid>

                    <!-- Second Row -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Product Search with Auto-Suggestions -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Search Product" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <Grid>
                                <TextBox x:Name="txtProductSearch" 
                                       Style="{StaticResource GRNSearchBox}" 
                                       TextChanged="TxtProductSearch_TextChanged"
                                       GotFocus="TxtProductSearch_GotFocus"
                                       LostFocus="TxtProductSearch_LostFocus"
                                       KeyDown="TxtProductSearch_KeyDown"
                                       Text="Search by barcode, product ID, or name..."/>
                                <Popup x:Name="ProductSuggestionsPopup"
                                     PlacementTarget="{Binding ElementName=txtProductSearch}"
                                     Placement="Bottom"
                                     IsOpen="False"
                                     AllowsTransparency="True"
                                     PopupAnimation="Slide"
                                     StaysOpen="False">
                                    <Border Background="{StaticResource DarkSurface}"
                                          BorderBrush="{StaticResource DarkBorder}"
                                          BorderThickness="1"
                                          CornerRadius="8"
                                          MaxHeight="300"
                                          MinWidth="{Binding ElementName=txtProductSearch, Path=ActualWidth}">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl x:Name="ProductSuggestionsList">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="Transparent"
                                                              BorderThickness="0"
                                                              Padding="12,8"
                                                              Cursor="Hand"
                                                              MouseLeftButtonDown="SuggestionItem_Click">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" 
                                                                         Text="{Binding ProductId}" 
                                                                         FontSize="11"
                                                                         FontWeight="Bold"
                                                                         Foreground="{StaticResource TextSecondary}"
                                                                         Margin="0,0,10,0"
                                                                         VerticalAlignment="Center"/>
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="{Binding Name}" 
                                                                             FontSize="13"
                                                                             FontWeight="SemiBold"
                                                                             Foreground="{StaticResource TextPrimary}"/>
                                                                    <TextBlock FontSize="10" Foreground="{StaticResource TextSecondary}">
                                                                        <Run Text="Barcode: "/><Run Text="{Binding Barcode}"/>
                                                                        <Run Text=" | "/><Run Text="{Binding CategoryName}"/>
                                                                    </TextBlock>
                                                                </StackPanel>
                                                                <TextBlock Grid.Column="2" 
                                                                         Text="{Binding AvailableQty, StringFormat='Qty: {0}'}" 
                                                                         FontSize="11"
                                                                         Foreground="{StaticResource SuccessGreen}"
                                                                         VerticalAlignment="Center"
                                                                         Margin="10,0,0,0"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </StackPanel>

                        <!-- Add New Item Button -->
                        <Button Grid.Column="1" Content="+ Add New Item" Style="{StaticResource GRNButton}" Width="130" VerticalAlignment="Bottom" Margin="0,0,10,0" Click="AddNewProductButton_Click"/>

                        <!-- Search Items Button -->
                        <Button Grid.Column="2" Content="🔍 Search Items" Style="{StaticResource SecondaryButton}" Width="130" VerticalAlignment="Bottom" Margin="0,0,10,0" Click="SearchItemsButton_Click"/>

                        <!-- Available Quantity -->
                        <StackPanel Grid.Column="3" Margin="0,0,10,0">
                            <TextBlock Text="Available Quantity" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtAvailableQty" Style="{StaticResource GRNTextBox}" IsReadOnly="True" Background="#30000000"/>
                        </StackPanel>

                        <!-- Reference No -->
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Reference No" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtReferenceNo" Style="{StaticResource GRNTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Third Row -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Quantity -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Quantity" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtQuantity" Text="0" Style="{StaticResource GRNTextBox}"/>
                        </StackPanel>

                        <!-- Unit Price -->
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="Unit Price (Rs)" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtUnitPrice" Text="0.00" Style="{StaticResource GRNTextBox}"/>
                        </StackPanel>

                        <!-- Package Type -->
                        <StackPanel Grid.Column="2" Margin="0,0,10,0">
                            <TextBlock Text="Package Type" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <Grid Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox x:Name="chkSingle" Content="Single" Grid.Column="0" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="10,0"/>
                                <CheckBox x:Name="chkPacked" Content="Packed" Grid.Column="1" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Discount % -->
                        <StackPanel Grid.Column="3" Margin="0,0,10,0">
                            <TextBlock Text="Discount %" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtDiscount" Text="0" Style="{StaticResource GRNTextBox}"/>
                        </StackPanel>

                        <!-- Add Button -->
                        <Button Grid.Column="4" Content="✓ Add" Style="{StaticResource GRNButton}" Width="100" VerticalAlignment="Bottom" Margin="0,0,10,0" Click="AddItemButton_Click"/>

                        <!-- Remove Button -->
                        <Button Grid.Column="5" Content="✗ Remove" Style="{StaticResource SecondaryButton}" Width="100" VerticalAlignment="Bottom" Click="RemoveItemButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Bottom Section with Grid and Summary -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Items DataGrid -->
                <Border Grid.Column="0" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20" Margin="0,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Added Items" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,15"/>

                        <DataGrid x:Name="dgGRNItems" Grid.Row="1" Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Width="50" Binding="{Binding SNo}"/>
                                <DataGridTextColumn Header="Product Name" Width="250" Binding="{Binding ProductName}"/>
                                <DataGridTextColumn Header="Category" Width="150" Binding="{Binding Category}"/>
                                <DataGridTextColumn Header="SubCategory" Width="150" Binding="{Binding SubCategory}"/>
                                <DataGridTextColumn Header="Quantity" Width="100" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Unit Price" Width="120" Binding="{Binding UnitPrice, StringFormat=Rs {0:#,##0.00}}"/>
                                <DataGridTextColumn Header="Discount %" Width="100" Binding="{Binding DiscountPercent}"/>
                                <DataGridTextColumn Header="Total" Width="120" Binding="{Binding Total, StringFormat=Rs {0:#,##0.00}}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Right Side Panel -->
                <Border Grid.Column="1" Background="{StaticResource DarkCard}" CornerRadius="16" Padding="20">
                    <StackPanel>
                        <!-- Item Count -->
                        <Border Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Item Count" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="txtItemCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Border>

                        <!-- Subtotal -->
                        <Border Background="{StaticResource DarkSurface}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Subtotal" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock x:Name="txtSubtotal" Text="Rs 0.00" FontSize="24" FontWeight="Bold" Foreground="{StaticResource SuccessGreen}"/>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <Button Content="💰 Pay GRN" Style="{StaticResource GRNButton}" Margin="0,0,0,10" Height="50" FontSize="14" Click="PayGRNButton_Click"/>
                        <Button Content="🔄 Reset All" Style="{StaticResource SecondaryButton}" Margin="0,0,0,10" Click="ResetAllButton_Click"/>
                        <Button Content="💾 View Temp" Style="{StaticResource SecondaryButton}" Margin="0,0,0,10" Click="ViewTempButton_Click"/>
                        <Button Content="🗑 Del Temp" Style="{StaticResource SecondaryButton}" Click="DelTempButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>